# ColdCopy Backup System Configuration
# Copy this file to .env and fill in your values

# Database Configuration
DB_HOST=your-database-host.supabase.co
DB_PORT=5432
DB_NAME=postgres
DB_USER=postgres
DB_PASSWORD=your-database-password

# Digital Ocean Spaces Configuration
DO_SPACES_KEY=your-spaces-access-key
DO_SPACES_SECRET=your-spaces-secret-key
DO_SPACES_BUCKET=coldcopy-backups
DO_SPACES_REGION=nyc3
DO_SPACES_ENDPOINT=https://nyc3.digitaloceanspaces.com

# Alert Configuration (Optional but recommended)
ALERT_EMAIL=devops@coldcopy.com
SMTP_HOST=smtp.gmail.com
SMTP_USER=alerts@coldcopy.com
SMTP_PASSWORD=your-smtp-password

# Backup Encryption (Highly recommended)
# Generate with: openssl rand -base64 32
BACKUP_ENCRYPTION_KEY=your-32-character-encryption-key

# Optional: Override default retention policies
# RETENTION_DAYS=30
# COMPLIANCE_RETENTION_DAYS=365