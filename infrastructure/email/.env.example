# AWS SES Configuration
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key
AWS_REGION=us-east-1
AWS_BACKUP_REGIONS=eu-west-1

# Database Configuration (Supabase)
DB_HOST=your-supabase-host.supabase.co
DB_PORT=5432
DB_NAME=postgres
DB_USER=postgres
DB_PASSWORD=your-database-password

# Redis Configuration
REDIS_URL=redis://localhost:6379

# Email Configuration
FROM_EMAIL=noreply@coldcopy.ai
FROM_NAME=ColdCopy
MARKETING_CONFIG_SET=coldcopy-marketing
TRANSACTIONAL_CONFIG_SET=coldcopy-transactional

# Tracking Configuration
TRACKING_DOMAIN=track.coldcopy.ai
TRACKING_PIXEL_URL=https://track.coldcopy.ai/pixel
CLICK_TRACKING_URL=https://track.coldcopy.ai/click
UNSUBSCRIBE_URL=https://app.coldcopy.ai/unsubscribe

# Monitoring & Alerts
ALERT_EMAIL=alerts@coldcopy.ai
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=alerts@coldcopy.ai
SMTP_PASSWORD=your-smtp-password

# Rate Limiting
RATE_LIMIT_PER_SECOND=14.0
BURST_SIZE=100

# IP Warmup
WARMUP_ENABLED=true
WARMUP_DAILY_INCREMENT=50
WARMUP_TARGET_VOLUME=10000

# Suppression Settings
SUPPRESSION_TTL_DAYS=90
HARD_BOUNCE_THRESHOLD=1
COMPLAINT_THRESHOLD=2

# Reputation Thresholds
REPUTATION_ALERT_THRESHOLD=0.90
BOUNCE_RATE_ALERT_THRESHOLD=0.05
COMPLAINT_RATE_ALERT_THRESHOLD=0.001